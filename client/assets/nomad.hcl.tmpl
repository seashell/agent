datacenter = "global"
region     = "global"
data_dir   = "{{ .DataDir }}" 
name       = "{{ .Name }}"
bind_addr  = "{{ .InterfaceAddress }}"

ports {
  http = 4646
  rpc  = 4647
  serf = 4648
}

server {
  enabled = false
}

client {
    enabled = true
    
    host_network "private" {
      interface = "{{ .InterfaceName }}"
    }
    
    host_network "public" {
      interface = "{{ .PublicInterfaceName }}"
    }

    meta {
      {{ range $k, $v := .Meta -}}
        {{ $k }} = "{{ $v }}"
      {{ end -}}
  }
}

plugin "docker" {
    config {
        allow_caps = ["ALL"]
    }
}